<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e5edca">

        <TextView
            android:id="@+id/tvCount0"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="visible"
            android:gravity="center"
            android:background="#17142e" />

        <TextView
            android:id="@+id/tvCount1"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:gravity="center"
            android:background="#17142e" />

        <TextView
            android:id="@+id/tvCount2"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:gravity="center"
            android:background="#17142e" />

        <TextView
            android:id="@+id/tvCount3"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:gravity="center"
            android:background="#17142e" />

        <TextView
            android:id="@+id/tvCount4"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:gravity="center"
            android:background="#17142e" />

        <TextView
            android:id="@+id/tvCount5"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:gravity="center"
            android:background="#17142e" />

        <TextView
            android:id="@+id/tvCount6"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:gravity="center"
            android:background="#17142e" />

        <TextView
            android:id="@+id/tvCount7"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:gravity="center"
            android:background="#17142e" />

        <TextView
            android:id="@+id/tvCount8"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:gravity="center"
            android:background="#17142e" />

        <TextView
            android:id="@+id/tvCount9"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:gravity="center"
            android:background="#17142e" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tvWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="단어"
            android:textColor="#000000"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <Button
            android:id="@+id/btnAnswer1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e5edca"
            android:gravity="center"
            android:text="뜻1"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnAnswer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="뜻2"
            android:textColor="#000000"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <Button
            android:id="@+id/btnAnswer3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="뜻3"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnAnswer4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e5edca"
            android:gravity="center"
            android:text="뜻4"
            android:textColor="#000000"
            android:textSize="20dp"/>

    </LinearLayout>


</LinearLayout>