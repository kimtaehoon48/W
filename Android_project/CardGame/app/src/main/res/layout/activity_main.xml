<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:textSize="30sp"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/home"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/home" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
        android:id="@+id/word_one"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:text="1"
        app:srcCompat="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/mean_one"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="1"
            app:srcCompat="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/word_two"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="1"
            app:srcCompat="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/mean_two"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="1"
            app:srcCompat="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/word_there"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="1"
            app:srcCompat="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/mean_there"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="1"
            app:srcCompat="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/word_four"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="1"
            app:srcCompat="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/mean_four"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="1"
            app:srcCompat="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/word_five"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="1"
            app:srcCompat="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/mean_five"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_row="4"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="1"
            app:srcCompat="@android:color/holo_blue_bright" />


    </GridLayout>

    <ImageView
        android:id="@+id/yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yes"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/no"
        android:visibility="invisible"/>

</LinearLayout>